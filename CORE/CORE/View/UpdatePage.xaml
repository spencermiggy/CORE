<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:CORE.CustomRenderer"
             x:Class="CORE.View.UpdatePage"
             BackgroundColor="AntiqueWhite" Visual="Material">
    <ContentPage.Content>
        <Grid x:Name="profgrid1">
            <StackLayout Padding="0" Margin="50" HorizontalOptions="FillAndExpand">
                <StackLayout VerticalOptions="Start">
                    <Frame BorderColor="White" VerticalOptions="Start"
                                               HorizontalOptions="Center" WidthRequest="100" HeightRequest="100"
                                               HasShadow="False" CornerRadius="110" Padding="0" IsClippedToBounds="True" BackgroundColor="White">
                        <Image x:Name="SelectedImage" Aspect="AspectFit"/>
                    </Frame>
                </StackLayout>
                <StackLayout>
                    <Button x:Name="BtnUploadImage" FontSize="Small" FontAttributes="Bold" BackgroundColor="AntiqueWhite"
                            Text="Select from Gallery" Clicked="SelectButton_Clicked" CornerRadius="100"
                                HeightRequest="45" BorderColor="AntiqueWhite" TextColor="Black" Margin="70,0,70,-10"/>
                </StackLayout>
                <Frame  BackgroundColor="White" HeightRequest="600" HasShadow="True" Padding="0" Margin="0" CornerRadius="30">

                    <StackLayout>


                        <StackLayout Margin="10">
                            <Label Text="Edit Profile" TextColor="Black" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="Medium" FontFamily="let"/>
                        </StackLayout>

                        <StackLayout Padding="0" Margin="20,20">

                            <Frame BackgroundColor="DarkGray" BorderColor="DarkGray" Padding="0" HorizontalOptions="FillAndExpand" CornerRadius="30">
                                <StackLayout Orientation="Horizontal">
                                    <local:CustomEntry x:Name="firstname" Placeholder="First Name" BackgroundColor="White" PlaceholderColor="Black" TextColor="Black" FontAttributes="None" HorizontalOptions="FillAndExpand" Margin="20,0,20,0"/>
                                </StackLayout>
                            </Frame>

                            <Frame BackgroundColor="DarkGray" BorderColor="DarkGray" Padding="0" HorizontalOptions="FillAndExpand" CornerRadius="30">
                                <StackLayout Orientation="Horizontal">
                                    <local:CustomEntry x:Name="lastname" Placeholder="Last Name" BackgroundColor="White" PlaceholderColor="Black" TextColor="Black" FontAttributes="None" HorizontalOptions="FillAndExpand" Margin="20,0,20,0"/>
                                </StackLayout>
                            </Frame>

                            <Frame BackgroundColor="DarkGray" BorderColor="DarkGray" Padding="0" HorizontalOptions="FillAndExpand" CornerRadius="30">
                                <StackLayout Orientation="Horizontal">
                                    <local:CustomEntry x:Name="Pnumb" Placeholder="Phone Number" BackgroundColor="White" Keyboard="Numeric" PlaceholderColor="Black" TextColor="Black" FontAttributes="None" HorizontalOptions="FillAndExpand" Margin="20,0,20,0"/>
                                </StackLayout>
                            </Frame>

                            <Frame BackgroundColor="DarkGray" BorderColor="DarkGray" Padding="0" HorizontalOptions="FillAndExpand" CornerRadius="30">
                                <StackLayout Orientation="Horizontal">
                                    <local:CustomEntry x:Name="Addre" Placeholder="Address" BackgroundColor="White" PlaceholderColor="Black" TextColor="Black" FontAttributes="None" HorizontalOptions="FillAndExpand" Margin="20,0,20,0"/>
                                </StackLayout>
                            </Frame>

                            <Frame BackgroundColor="DarkGray" BorderColor="DarkGray" Padding="0" HorizontalOptions="FillAndExpand" CornerRadius="30">
                                <StackLayout Orientation="Horizontal">
                                    <local:CustomEntry x:Name="Citys" Placeholder="City" BackgroundColor="White" PlaceholderColor="Black" TextColor="Black" FontAttributes="None" HorizontalOptions="FillAndExpand" Margin="20,0,20,0"/>
                                </StackLayout>
                            </Frame>

                            <Frame BackgroundColor="DarkGray" BorderColor="DarkGray" Padding="0" HorizontalOptions="FillAndExpand" CornerRadius="30">
                                <StackLayout Orientation="Horizontal">
                                    <local:CustomEntry x:Name="Passw" Placeholder="Password" IsPassword="True" BackgroundColor="White" PlaceholderColor="Black" TextColor="Black" FontAttributes="None" HorizontalOptions="FillAndExpand" Margin="20,0,20,0"/>
                                </StackLayout>
                            </Frame>

                            <ImageButton Source="https://freepngimg.com/thumb/categories/1428.png" Clicked="SaveBtn" BackgroundColor="Transparent"/>

                        </StackLayout>


                    </StackLayout>

                </Frame>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>