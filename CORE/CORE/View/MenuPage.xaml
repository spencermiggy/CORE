<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CORE.View.MenuPage"
             BackgroundImageSource="BG.jpg">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Grid ColumnDefinitions="*,*,*,*" Margin="20">
                    <Button ImageSource="user.png" BackgroundColor="Transparent" Clicked="ProfBtn" Grid.Column="0" Grid.Row="0"/>
                    <SearchBar x:Name="Search1" Placeholder="Search" HorizontalOptions="End" VerticalOptions="Start" TextColor="Black" CancelButtonColor="HotPink" PlaceholderColor="Black" BackgroundColor="WhiteSmoke"
                               Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" TextChanged="Search1_TextChanged"/>
                </Grid>
            </StackLayout>
            <ScrollView>
                <CollectionView x:Name="ShowPeople">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView BackgroundColor="Transparent">
                                <SwipeView.LeftItems>
                                    <SwipeItems>
                                        <SwipeItem Text="Message/Call"
                                         IconImageSource="sms.png"
                                         BackgroundColor="LightPink"
                                         Clicked="TextBtn"/>
                                    </SwipeItems>
                                </SwipeView.LeftItems>
                                <Frame BackgroundColor="Transparent" BorderColor="Transparent" Margin="15,-20,5,-35" Opacity="1">
                                    <Grid Margin="10" Padding="15">
                                        <Label FontSize="Caption" FontFamily="let" Text="{Binding fname}" Grid.Column="0" Grid.Row="0"/>
                                        <Label FontSize="Caption" FontFamily="let" Text="{Binding activetime}" Grid.Column="1" Grid.Row="0"/>
                                        <Label FontSize="Caption" FontFamily="let" Text="{Binding statusact}" Grid.Column="1" Grid.Row="1"/>
                                        <Label FontSize="Caption" FontFamily="let" Text="{Binding job}" Grid.Column="0" Grid.Row="1"/>
                                        <Label x:Name="tele" FontSize="Subtitle" FontFamily="let" Text="{Binding pnum}" Grid.Column="0" Grid.Row="2"/>
                                        <Image Source="{Binding propics}" Aspect="AspectFit" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" HeightRequest="50"
                                           WidthRequest="50"/>
                                    </Grid>
                                </Frame>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>