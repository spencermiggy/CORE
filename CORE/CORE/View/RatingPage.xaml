<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:fRating="clr-namespace:Rating;assembly=Rating"
             x:Class="CORE.View.RatingPage" BackgroundColor="AntiqueWhite">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
            <Entry x:Name="RepID" HorizontalOptions="Center" Placeholder="Paste the Copied ID here" PlaceholderColor="Black" TextColor="Black"/>
            <fRating:RatingBar x:Name="Ratedk" SelectedStarValue="0" ImageHeight="30" ImageWidth="30"
                               VerticalOptions="Center" HorizontalOptions="Center" EmptyStarImage="emptystar"
                               FillStarImage="fullstar"></fRating:RatingBar>
            <Button x:Name="SubBtn" Text="Submit" Clicked="SubBtn_Clicked" CornerRadius="30"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>